{
  "name": "hiring-test-full-stack",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack hiring test application",
  "scripts": {
    "install:all": "npm install && cd server && npm install && cd ../web && npm install",
    "dev": "concurrently -k -p \"[{name}]\" -n \"Backend,Frontend\" -c \"cyan.bold,green.bold\" \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "cd server && npm start",
    "dev:web": "cd web && npm start",
    "build": "npm run build:server && npm run build:web",
    "build:server": "cd server && npm run build:ts",
    "build:web": "cd web && npm run build",
    "start": "npm run dev"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}

